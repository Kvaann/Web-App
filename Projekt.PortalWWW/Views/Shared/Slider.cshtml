@model IEnumerable<Projekt.Data.Data.CMS.Slider>

<!-- slider section -->
<div class="hero_area">
    <section class="slider_section ">
        <div id="customCarousel1" class="carousel slide pointer-event" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container ">
                        <div class="row">
                            <div class="col-md-7 col-lg-6 ">
                                <div class="detail-box">
                                                    @foreach (var item in Model)
                {
                                    <h1>
                                        @Html.Raw(item.Nazwa)
                                    </h1>
                                    <p>
                                        @Html.Raw(item.Opis)
                                    </p>
                                    }
                                    <div class="btn-box">
                                        <a @Html.ActionLink("Zamów teraz","Index", "Sklep")
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>

    </section>
</div>
<!-- end slider section -->

