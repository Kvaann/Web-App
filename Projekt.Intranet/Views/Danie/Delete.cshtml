@model Projekt.Data.Data.Sklep.Danie

@{
    ViewData["Title"] = "Usuwanie";
}

<h1>Usuwanie</h1>

<h3>Czy chesz na pewno usunąć?</h3>
<div>
    <h4>Danie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KategoriaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KategoriaId)
        </dd>
        <div>
            @if (Model.FotoURL != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.FotoURL)" alt="@Model.FotoURL" class="img-thumbnail" style="max-width: 100px; max-height: 100px; background-color:transparent; border: none;" />
            }
        </div>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdDania" />
        <div>
            <button class="mdc-button mdc-button--unelevated filled-button--secondary mdc-ripple-upgraded" style="--mdc-ripple-fg-size:65px; --mdc-ripple-fg-scale:1.92922; --mdc-ripple-fg-translate-start:22.5px, -15.5px; --mdc-ripple-fg-translate-end:22.3203px, -14.5px;">
                <i class="material-icons mdc-button__icon" type="submit" value="Delete">delete</i>
                Usuń
            </button>
        </div>
        <div>
            <a asp-action="Index" class="mdc-button mdc-button--outlined outlined-button--dark mdc-ripple-upgraded" --mdc-ripple-fg-translate-end:14.3828px, -2.5px;">Powrót do listy</a>
        </div>

    </form>
</div>
