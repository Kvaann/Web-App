@model Projekt.Data.Data.Sklep.Promocja

@{
    ViewData["Title"] = "Edytuj sekcję O Nas";
}

<h1>Edytuj sekcję O Nas</h1>

<h4>Treść sekcji O Nas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mdc-text-field mdc-ripple-upgraded" style="--mdc-ripple-fg-size:219px; --mdc-ripple-fg-scale:1.73175; --mdc-ripple-fg-translate-start:179.5px, -87.5px; --mdc-ripple-fg-translate-end:73.75px, -87px;">
                    <label asp-for="Nazwa" class="mdc-floating-label"></label>
                    <input asp-for="Nazwa" class="mdc-text-field__input" />
                    <span asp-validation-for="Nazwa" class="text-danger"></span>
                </div>
                <div class="mdc-text-field mdc-ripple-upgraded" style="--mdc-ripple-fg-size:219px; --mdc-ripple-fg-scale:1.73175; --mdc-ripple-fg-translate-start:179.5px, -87.5px; --mdc-ripple-fg-translate-end:73.75px, -87px;">
                    <label asp-for="Opis" class="mdc-floating-label"></label>
                    <input asp-for="Opis" class="mdc-text-field__input" />
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <br />
    <div>
        <a asp-action="Index" class="mdc-button mdc-button--outlined outlined-button--dark mdc-ripple-upgraded" --mdc-ripple-fg-translate-end:14.3828px, -2.5px;">Powrót do listy</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
